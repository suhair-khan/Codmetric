def chatbot_response(user_input):
    user_input = user_input.lower()
    if "hello" in user_input or "hi" in user_input:
        return "Hello! How can I help you today?"
    elif "bye" in user_input or "goodbye" in user_input:
        return "Goodbye! Have a great day."
    elif "how are you" in user_input:
        return "I'm just a program, but I'm doing great! Thanks for asking."
    elif "your name" in user_input:
        return "I'm a simple rule-based chatbot created for this project."
    elif "help" in user_input:
        return "Sure! You can ask me about my name, how I am, or just say hello."
    else:
        return "Sorry, I don't understand that yet."
# Main Program
print("Chatbot: Hi! Iâ€™m your assistant. Type 'bye' to exit.")
while True:
    user_message = input("You: ")
    if user_message.lower() in ["bye", "goodbye"]:
        print("Chatbot: Goodbye! Have a great day.")
        break
    response = chatbot_response(user_message)
    print("Chatbot:", response)
    
